<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#fe4060"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/player_tv_back"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:drawableLeft="@drawable/btn_back_gray"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/btn_back_gray"
            android:onClick="back"
            android:padding="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="我的私藏" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:onClick="logout"
            android:padding="10dp"
            android:textColor="@color/graylight"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:text="退出" />
    </RelativeLayout>

    <com.act.videochat.view.YRecycleview
        android:id="@+id/yrecycle_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="45dp" />

    <com.act.videochat.view.LoadNetView
        android:id="@+id/loadview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="45dp" />
</FrameLayout>
